{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "binaryboxer",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "preview.html"
      },
      "game": {
        "entry": "game.html"
      },
      "leaderboard": {
        "inline": true,
        "entry": "leaderboard.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create Binary Boxer Arena",
        "description": "Create a new Binary Boxer robot boxing arena post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/on-app-install"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "dev": {
    "subreddit": "binaryboxer_dev"
  }
}